<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/info_textbox_report_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:text="Please fill in below form.\n You will get 10 points once the information verified "/>

    <EditText
        android:id="@+id/machine_id_edittext_report_dialog"
        android:layout_below="@+id/info_textbox_report_dialog"
        android:inputType="number"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="Machine ID"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/booking_id_edittext_report_dialog"
        android:layout_below="@+id/machine_id_edittext_report_dialog"
        android:inputType="number"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="Booking ID"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/status_textbox_report_idalog"
        android:layout_below="@+id/booking_id_edittext_report_dialog"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text=""/>

</RelativeLayout>