<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/ranking_textbox_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:text="1"
        android:gravity="center_vertical"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:id="@+id/avatar_list_item"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:elevation="4dp"
        android:src="@drawable/avatar"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/username_textbox_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="An Lam"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/level_textbox_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 5:"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_marginRight="5dp"/>
                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/progress_bar_list_item"
                    android:layout_marginTop="4dp"
                    android:layout_height="12dp"
                    android:layout_width="120dp"
                    app:rcProgressColor="@android:color/holo_green_dark"
                    app:rcBackgroundPadding="2dp"
                    app:rcBackgroundColor="@android:color/darker_gray"
                    app:rcProgress="60"/>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>